<idea-plugin version="2">
  <id>com.thoughtworks.gauge</id>
  <name>Gauge</name>
  <version>0.0.1</version>
  <vendor email="support@thoughtworks.com" url="http://www.thoughtworks.com">Thoughtworks</vendor>

  <description><![CDATA[
      Plugin for writing Gauge tests
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
    <module-components>
        <component>
            <implementation-class>com.thoughtworks.gauge.GaugeModuleComponent</implementation-class>
        </component>
    </module-components>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
      <fileTypeFactory implementation="com.thoughtworks.gauge.language.SpecFileTypeFactory"/>
      <lang.parserDefinition language="Specification" implementationClass="com.thoughtworks.gauge.parser.SpecParserDefinition"/>
      <lang.syntaxHighlighterFactory key="Specification" implementationClass="com.thoughtworks.gauge.highlight.SpecSyntaxHighlighterFactory"/>
      <colorSettingsPage implementation="com.thoughtworks.gauge.highlight.SpecColorSettingsPage"/>
      <annotator language="Specification" implementationClass="com.thoughtworks.gauge.annotator.StepAnnotator"/>
      <completion.contributor language="Specification" implementationClass="com.thoughtworks.gauge.autocomplete.StepCompletionContributor" order="first,before liveTemplates"/>
      <quoteHandler fileType="Specification" className="com.thoughtworks.gauge.autocomplete.ArgQuoteHandler"/>
      <lang.braceMatcher language="Specification" implementationClass="com.thoughtworks.gauge.autocomplete.PairMatcher"/>
      <moduleType id="Gauge_Module" implementationClass="com.thoughtworks.gauge.module.GaugeModuleType"/>
      <moduleConfigurationEditorProvider implementation="com.thoughtworks.gauge.module.GaugeModuleConfigurationProvider"/>
      <configurationType implementation="com.thoughtworks.gauge.execution.GaugeRunTaskConfigurationType"/>
      <programRunner implementation="com.thoughtworks.gauge.execution.GaugeTestRunner"/>
      <runConfigurationProducer implementation="com.thoughtworks.gauge.execution.GaugeExecutionProducer"/>
      <lang.findUsagesProvider implementationClass="com.thoughtworks.gauge.usage.FindUsagesProvider" language="Specification"/>
      <referencesSearch implementation="com.thoughtworks.gauge.usage.StepDefinitionSearch"/>
      <methodReferencesSearch implementation="com.thoughtworks.gauge.usage.MethodReferenceSearch"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="Gauge.Format"
              class="com.thoughtworks.gauge.formatter.SpecFormatter"
              text="spec format" description="Format spec files">
      <keyboard-shortcut first-keystroke="ctrl alt shift f" keymap="$default"/>
      </action>
  </actions>

</idea-plugin>